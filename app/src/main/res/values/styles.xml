<resources>

    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="android:ThemeOverlay.Material.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="android:ThemeOverlay.Material.Light" />

    <style name="AppTheme.ActionBarTheme" parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:itemBackground">@color/colorLight</item>
        <item name="android:actionBarItemBackground">@color/colorLight</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBarTheme.TitleTextStyle</item>
        <item name="android:icon">@mipmap/ic_search_icon</item>
        <item name="android:closeIcon">@mipmap/ic_launcher</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverflowButtonStyle</item>
    </style>

    <style name="AppTheme.ActionBarTheme.TitleTextStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.OverflowButtonStyle" parent="Base.Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorLight</item>
        <item name="android:color">@color/colorLight</item>
        <item name="android:background">@color/colorLight</item>
        <item name="android:colorForeground">@color/colorLight</item>
        <item name="android:colorPrimary">@color/colorLight</item>
        <item name="android:colorButtonNormal">@color/colorLight</item>
        <item name="android:fillColor">@color/colorLight</item>
        <item name="android:solidColor">@color/colorLight</item>
  </style>
</resources>
