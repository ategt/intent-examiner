<resources>

    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/AppTheme.NoActionBar</item>
        <item name="android:actionBarTheme">@style/AppTheme.NoActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="android:ThemeOverlay.Material.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="android:ThemeOverlay.Material.Light" />

    <style name="AppTheme.ActionBarTheme" parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:itemBackground">@color/colorLight</item>
        <item name="android:actionBarItemBackground">@color/colorLight</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBarTheme.TitleTextStyle</item>
        <item name="android:icon">@mipmap/ic_search_icon</item>
        <item name="android:closeIcon">@mipmap/ic_launcher</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverflowButtonStyle</item>
    </style>

    <style name="AppTheme.ActionBarTheme.TitleTextStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.OverflowButtonStyle" parent="Base.Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorLight</item>
        <item name="android:color">@color/colorLight</item>
        <item name="android:background">@color/colorLight</item>
        <item name="android:colorForeground">@color/colorLight</item>
        <item name="android:colorPrimary">@color/colorLight</item>
        <item name="android:colorButtonNormal">@color/colorLight</item>
        <item name="android:fillColor">@color/colorLight</item>
        <item name="android:solidColor">@color/colorLight</item>
  </style>


    <style name="Base_ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
        <!--<item name="subtitleTextAppearance">@style/CustomSubTitleTextAppearance</item>-->

        <!--<item name="android:logo">@mipmap/ic_search_icon</item>-->
        <!--<item name="android:logo">@drawable/file</item>-->
        <item name="android:title">@string/app_name</item>
        <item name="android:popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="Base_ToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/colorLight</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/yellow_500_primary</item>
        <item name="android:logo">@drawable/file</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--<item name="android:fontFamily">@string/ff_roboto_condensed</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--<style name="CustomSubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">-->
        <!--<item name="android:fontFamily">@string/ff_roboto_condensed</item>-->
        <!--<item name="android:textSize">14sp</item>-->
